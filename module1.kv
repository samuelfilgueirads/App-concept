#:import Factory kivy.factory.Factory
#:import utils kivy.utils

<MyPopup_Cancel@Popup>
    auto_dismiss: True
    title: 'Cancel'
    size_hint: 0.5,0.5
    pos_hint: {'center_x':0.5,'center_y':0.5}
    BoxLayout:
        orientation: 'vertical'
        MDCard:
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_x: 0.22
            size_hint_y: 1
            md_bg_color: utils.get_color_from_hex('#1d3557')
            border_radius: 20
            radius: [15]

        Label:
            text: 'Are you sure you want to cancel and go back to main page?'
        BoxLayout:
            orientation: 'horizontal'
            MDFlatButton:
                id: one_button
                markup: True
                text: "[b]YES[/b]"
                theme_text_color: "Custom"
                text_color: 6/255,57/255,112/255,1
                size_hint:0.8,0.8
                md_bg_color: (171/255,219/255,227/255,1)
                on_release: root.dismiss()
                on_release: app.root.current = 'menu'  
            MDFlatButton:
                id: two_button
                markup: True
                text: "[b]NO[/b]"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                md_bg_color: (0.6,0.1,0.1,1)
                size_hint:0.8,0.8
                on_release: root.dismiss()

##Popup para Botao editar
<MyPopup_Edit@Popup>
    auto_dismiss: True
    title: 'Edit parameters'
    size_hint: 0.5,0.5
    pos_hint: {'center_x':0.5,'center_y':0.5}
    BoxLayout:
        orientation: 'vertical'
        MDCard:
            pos_hint: {'center_x':0.5,'center_y':0.5}
            size_hint_x: 0.22
            size_hint_y: 1
            md_bg_color: utils.get_color_from_hex('#1d3557')
            border_radius: 20
            radius: [15]
        Label:
            text: 'Are you sure you want to edit the input parameters?'
        BoxLayout:
            orientation: 'horizontal'
            MDFlatButton:
                id: one_button
                markup: True
                text: "[b]YES[/b]"
                theme_text_color: "Custom"
                text_color: 6/255,57/255,112/255,1
                size_hint:0.8,0.8
                md_bg_color: (171/255,219/255,227/255,1)
                on_release: root.dismiss()
            MDFlatButton:
                id: two_button
                markup: True
                text: "[b]NO[/b]"
                theme_text_color: "Custom"
                text_color: 1,1,1,1
                #background_normal: ''
                md_bg_color: (0.6,0.1,0.1,1)
                size_hint:0.8,0.8
                on_release: root.dismiss()

<Modulo_1>
    canvas.before:
    #layout color
        Color:
            rgba: (0.85,0.85,0.85,1)
        Rectangle:
            pos:self.pos
            size:self.size

    FloatLayout:
        size: root.width,root.height

        MDFlatButton:
            id: okay_button
            markup: True
            text: "[b]OK[/b]"
            theme_text_color: "Custom"
            text_color: 6/255,57/255,112/255, 1
            pos_hint: {'center_x':0.62,'center_y':0.035}
            md_bg_color: (171/255,219/255,227/255,1)
            disabled:False

        MDFlatButton:
            id: cancel_button
            markup: True
            text: "[b]CANCEL[/b]"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {'center_x':0.525,'center_y':0.035}
            md_bg_color: (0.6,0.1,0.1,1)
            on_release: Factory.MyPopup_Cancel().open()
        
        MDFlatButton:
            id: edit_button
            markup: True
            text: "[b]EDIT[/b]"
            theme_text_color: "Custom"
            text_color: 1,1,1,1
            pos_hint: {'center_x':0.43,'center_y':0.035}
            md_bg_color: (140/255, 120/255, 32/255,1)
            on_release: Factory.MyPopup_Edit().open()

        MDFlatButton:
            size_hint:0.05,0.05
            pos_hint: {'center_x':0.35,'center_y':0.035}
            on_release: app.root.current = 'menu'
            Image:
                source: 'arrow-left-circle.png'